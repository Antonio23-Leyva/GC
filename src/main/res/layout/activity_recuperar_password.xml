<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_fondo"
    tools:context=".RecuperarPassword">

    <ImageView
        android:id="@+id/img_fondo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_fondo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="221dp"
        android:layout_height="130dp"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="85dp"
        android:src="@drawable/encriptado"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="129dp"
        android:layout_marginLeft="274dp"
        android:src="@drawable/ic_circles_fondo"/>


    <TextView
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="180dp"
        android:text="Generar Nueva Contraseña"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="italic|bold" />

    <RelativeLayout
        android:layout_width="345dp"
        android:layout_height="300dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="230dp"
        android:background="#204E70AE">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_email_recupera_password"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="324dp"
            android:layout_height="66dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/ic_mail"
            android:ems="10"
            android:hint="Correo Electronico"
            android:inputType="textEmailAddress"
            android:textAlignment="center" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_password"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="324dp"
            android:layout_height="66dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="100dp"
            android:drawableStart="@drawable/ic_lock"
            android:drawableEnd="@drawable/ic_show"
            android:ems="10"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:textAlignment="center" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_confirmar_password"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="324dp"
            android:layout_height="66dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="180dp"
            android:drawableStart="@drawable/ic_lock"
            android:drawableEnd="@drawable/ic_show"
            android:ems="10"
            android:hint="Confirmar contraseña"
            android:inputType="textPassword"
            android:textAlignment="center" />

    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_confirmar"
        android:layout_width="315dp"
        android:layout_height="71dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="550dp"
        android:text="Confirmar"
        android:textColor="#FFFF"
        app:backgroundTint="#3E9DBB" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_atras_recuperar_password"
        android:layout_width="157.5dp"
        android:layout_height="71dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="640dp"
        android:text="Atras"
        android:textColor="#FFFF"
        app:backgroundTint="#3E9DBB" />

</RelativeLayout>