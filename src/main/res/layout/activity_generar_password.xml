<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_fondo"
    android:backgroundTint="@color/white"
    tools:context=".GenerarPassword">

    <ImageView
        android:id="@+id/img_fondo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_fondo" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="221dp"
        android:layout_height="130dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/encriptado" />

    <TextView
        android:id="@+id/txt_titulo_menu"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="180dp"
        android:gravity="center"
        android:text="Generar Contraseña"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="italic|bold" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:layout_marginLeft="257dp"
        android:src="@drawable/ic_circles_fondo" />

    <RelativeLayout
        android:layout_width="345dp"
        android:layout_height="300dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="230dp"
        android:background="#250277BD">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_aplicacion"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="324dp"
            android:layout_height="66dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:drawableStart="@drawable/ic_baseline_android_24"
            android:hint="Nombre Aplicacion"
            android:inputType="textAutoComplete"
            android:textAlignment="center" />

        <TableLayout
            android:layout_width="324dp"
            android:layout_height="66dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="115dp"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/toggleButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_baja"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:backgroundTint="#0288D1"
                        android:text="baja" />

                    <Button
                        android:id="@+id/btn_media"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:backgroundTint="#0288D1"
                        android:text="media" />


                    <Button
                        android:id="@+id/btn_alta"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1"
                        android:backgroundTint="#0288D1"
                        android:text="alta" />
                </com.google.android.material.button.MaterialButtonToggleGroup>
            </TableRow>
        </TableLayout>

        <TextView
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="75dp"
            android:gravity="start|center"
            android:text="Nivel de seguridad"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/longitud_cadena"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="150dp"
            android:gravity="center|center"
            android:text="Longitud:10 caracteres"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:textStyle="italic|bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_contrasena"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="324dp"
            android:layout_height="66dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="210dp"
            android:drawableStart="@drawable/ic_lock"
            android:drawableEnd="@drawable/ic_show"
            android:hint="Contraseña"
            android:textAlignment="center" />

    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_atras_menu"
        android:layout_width="157.5dp"
        android:layout_height="71dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="655dp"
        android:text="Atras"
        android:textColor="#FFFF"
        app:backgroundTint="#3E9DBB" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_guardar_menu"
        android:layout_width="157.5dp"
        android:layout_height="71dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="655dp"
        android:gravity="center"
        android:text="Guardar"
        android:textColor="#FFFF"
        app:backgroundTint="#3E9DBB" />

</RelativeLayout>