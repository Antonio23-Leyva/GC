<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_fondo"
    android:backgroundTint="@color/white"
    tools:context=".MainActivity">


  <ImageView
      android:id="@+id/img_fondo"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:background="@drawable/bg_fondo"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/imageView" />

  <ImageView
      android:id="@+id/imageView3"
      android:layout_width="221dp"
      android:layout_height="130dp"
      android:layout_marginTop="44dp"
      android:src="@drawable/encriptado"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.49"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/img_fondo"
      app:layout_constraintVertical_bias="0.044" />

  <ImageView
      android:id="@+id/imageView"
      android:layout_width="wrap_content"
      android:layout_height="129dp"
      android:src="@drawable/ic_circles_fondo"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.003" />

  <TextView
      android:id="@+id/txt_titulo_main"
      android:layout_width="320dp"
      android:layout_height="50dp"
      android:text="Iniciar Sesion"
      android:textAlignment="center"
      android:textColor="@color/white"
      android:textSize="20dp"
      android:textStyle="italic|bold"
      app:layout_constraintBottom_toTopOf="@+id/editTextTextEmailAddress"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.472"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView3"
      app:layout_constraintVertical_bias="0.23" />

  <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/editTextTextEmailAddress"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
      android:layout_width="324dp"
      android:layout_height="66dp"
      android:drawableStart="@drawable/ic_mail"
      android:ems="10"
      android:hint="Correo Electronico"
      android:inputType="textEmailAddress"
      app:layout_constraintBottom_toTopOf="@+id/editTextTextEmailAddress2"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.551"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView3"
      app:layout_constraintVertical_bias="0.865"
      tools:ignore="SpeakableTextPresentCheck" />

  <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/editTextTextEmailAddress2"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
      android:layout_width="324dp"
      android:layout_height="66dp"
      android:drawableStart="@drawable/ic_lock"
      android:ems="10"
      android:hint="Contrase単a"
      android:inputType="textPassword"
      app:layout_constraintBottom_toTopOf="@+id/txt_recuperar_contrase単a"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.551"
      app:layout_constraintStart_toStartOf="@+id/img_fondo"
      app:layout_constraintTop_toBottomOf="@+id/imageView3"
      app:layout_constraintVertical_bias="0.917"
      tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />


  <com.google.android.material.button.MaterialButton
      android:id="@+id/btn_ingresar"
      android:layout_width="315dp"
      android:layout_height="71dp"
      android:layout_marginTop="336dp"
      android:text="Ingresar"
      android:textColor="#FFFF"
      app:backgroundTint="#3E9DBB"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.593"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView3"
      tools:ignore="MissingConstraints" />

  <com.google.android.material.textview.MaterialTextView
      android:id="@+id/txt_recuperar_contrase単a"
      android:layout_width="170dp"
      android:layout_height="48dp"
      android:cursorVisible="true"
      android:inputType="textMultiLine"
      android:text="Recuperar Contrase単a"
      android:textColor="#000000"
      android:textSize="15dp"
      app:layout_constraintBottom_toTopOf="@+id/btn_ingresar"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.933"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView3"
      app:layout_constraintVertical_bias="0.972"
      tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_google"
        android:layout_width="270dp"
        android:layout_height="71dp"
        android:layout_marginTop="450dp"
        android:drawableEnd="@drawable/ic_icons8_google_1"
        android:text="Google"
        android:textColor="#000000"
        android:textSize="15dp"
        app:backgroundTint="#1AFFEAE6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>